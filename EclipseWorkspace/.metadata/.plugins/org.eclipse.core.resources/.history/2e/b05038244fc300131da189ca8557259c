package worms.model;

import be.kuleuven.cs.som.annotate.Basic;

public abstract class Weapon {

	private abstract final double hitPointsDamage;
	private abstract final double actionPointsCost;
	private abstract int ammunition;
	
	public Weapon() {
		
	}
	
	
	
// {{ projectileMass
	
	private abstract final double projectileMass;
	
	@Basic
	public double getProjectileMass() {
		return projectileMass;
	}
	
	// }}
	
// {{ force

	private abstract final double baseForce;
	
	@Basic
	public double getBaseForce() {
		return baseForce;
	}
	
	public abstract double getForce( double propulsionYield );
	
	// }
	
	
	
	

}
