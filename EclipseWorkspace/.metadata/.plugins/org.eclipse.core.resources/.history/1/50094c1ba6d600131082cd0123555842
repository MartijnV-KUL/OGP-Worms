package worms.model;

public class StatementWhile extends Statement {
	
	public StatementWhile(Expression e, Statement s) {
		super(new Statement[] {s}, new Expression[] {e});
	}

	@Override
	public void execute() {
		while ((boolean)getExpressions().get(0).evaluate().getValue()) {
			getStatements().get(0).execute();
		}
	}

	@Override
	public boolean containsActionStatement() {
		return getStatements().get(0).containsActionStatement();
	}

}
