package worms.model;

import be.kuleuven.cs.som.annotate.Basic;

public abstract class Weapon {

// {{ Projectile Mass
	
	protected final double projectileMass;
	
	@Basic
	public double getProjectileMass() {
		return projectileMass;
	}
	
	// }}
	
// {{ Force

	protected final double baseForce;
	
	@Basic
	public double getBaseForce() {
		return baseForce;
	}
	
	public abstract double getForce( double propulsionYield );
	
	// }}
	
// {{ Hit Points Damage

	protected final double hitPointsDamage;
	
	public double getHitPointsDamage() {
		return hitPointsDamage;
	}
	
	// }}
	
// {{ Action Points Cost

	protected final double actionPointsCost;
	
	public double getActionPointsCost() {
		return actionPointsCost;
	}
	
	// }}
	
// {{ Ammunition

	private int ammunition;
	
	public int getAmmunition() {
		return ammunition;
	}
	
	
	// }}
	
// {{ Worm Association
	
	private Worm worm = 
	
	
	
	
	// }}
	
	
	
	

}
