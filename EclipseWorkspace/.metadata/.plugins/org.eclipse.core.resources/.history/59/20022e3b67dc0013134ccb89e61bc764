package worms.model;

public class StatementActionTurn extends StatementAction {
	
	public StatementActionTurn() {
		
	}

	@Override
	protected void doAction() {
		Program program = getRootProgram();
		Worm worm = program.getWorm();
		if ( !(getExpressions().get(0).evaluate().getValue() instanceof Number) )
			program.typeErrorOccurred();
		if ( !worm.canTurn((double)(getExpressions().get(0).evaluate()).getValue()) )
			program.stopProgram();
		getRootProgram().getHandler().turn(worm, (double)(getExpressions().get(0).evaluate()).getValue());
		return;
	}

}
