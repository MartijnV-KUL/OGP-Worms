package worms.model;

public class StatementActionFire extends StatementAction {
	
	public StatementActionFire(int line, int column) {
		super(line,column);
	}

	@Override
	protected void doAction() {
		Program program = getRootProgram();
		Worm worm = program.getWorm();
		if ( !worm.canShoot() )
			program.stopProgram();
		if ( !(getExpressions().get(0).evaluate().getValue() instanceof Number) )
			program.typeErrorOccurred();
		program.getHandler().fire(worm, (int)Math.floor((double)(getExpressions().get(0).evaluate()).getValue()));
		return;
	}

}
